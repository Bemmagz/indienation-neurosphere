{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  
  "routes": [
    {
      "src": "/robots.txt",
      "dest": "/api/robots",
      "headers": {
        "Content-Type": "text/plain"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "X-Robots-Tag": "noindex, nofollow, noarchive",
        "Cache-Control": "no-store, max-age=0"
      }
    }
  ],
  
  "rewrites": [
    { "source": "/vault", "destination": "/vault.html" },
    { "source": "/certificate", "destination": "/certificate.html" }
  ]
}
